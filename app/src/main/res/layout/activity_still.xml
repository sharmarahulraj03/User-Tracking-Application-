<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_still"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#fab5ba"
    tools:context="com.assignment2ottawa.usertrackingapp.Still">

    <fragment
        android:id="@+id/mapStill"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        tools:context="com.assignment2ottawa.usertrackingapp.Still"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/gifTextView"
        android:layout_height="275dp" />

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="match_parent"
        android:background="@drawable/still1"
        android:layout_height="268dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:id="@+id/gifTextView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stillDescription"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:textAlignment="center" />

</RelativeLayout>
